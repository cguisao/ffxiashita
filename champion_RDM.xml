	<variables>
		<var name="init">0</var><!--dont touch-->	
	</variables>

	<jobability>
		<if ad_name="Chainspell"><equip></equip></if>
		<if ad_name="Composure"><registerbuff id="419" /></if>
	</jobability>
	
	<idlegear>
		<if p_status="resting">
			<equip set="Resting" />
		</if>
		<else>
			<equip set="Stand" />
		</else>
		<if advanced="$init=0">
			<setvar name="init" value="1" />
			<command>/exec macrobook1.txt</command>
		</if>
	</idlegear>
	
	<midmagic>
		<if ad_name="Stun">
			<equip set="Stun" />
			<return />
		</if>
		
		<if ad_name="Stoneskin">
			<equip set="Stoneskin" />
		</if>
		<elseif ad_name="Cure*|Curaga*">
			<equip set="Cure" />
		</elseif>
		<elseif ad_skill="Ninjutsu"><equip set="Haste" /></elseif>
		<elseif ad_skill="DarkMagic"><equip set="Dark" /></elseif>
		<elseif ad_skill="ElementalMagic">
			<if ad_name="Burn|Choke|Shock|Rasp|Drown|Choke"><equip set="EleDot" /></if>
			<elseif ad_name="Fire*|Blizzard*|Aero*|Stone*|Thunder*|Water*">
			<equip set="Nuke" /></elseif>
		</elseif>
		
		<elseif ad_skill="EnfeeblingMagic">
			<if ad_name="Dia*|Slow*|Paralyze*|Blind*|Poison*|Gravity|Sleep*|Silence|Bind">
				<equip set="Enfeeb-MND" />
			</if>
		</elseif>
		<elseif ad_skill="EnhancingMagic">
			<if ad_name="Embrava|En*|Bar*|Phalanx"><equip set="Enhancing" /></if>
			<else><equip set="Haste" /></else>
		</elseif>
	</midmagic>
</ashitacast>
