	<variables>
		<var name="init">0</var><!--dont touch-->	
		<var name="THTPSetActive">0</var>
		<var name="TPSetActive">0</var>
		<var name="EvaSetActive">0</var>
		<var name="EvaSetActiveRun">0</var>
	</variables>
	
	<inputcommands>
		<cmd input="/th">
			<if advanced="$THTPSetActive=0">
				<setvar name="THTPSetActive" value="1" />
				<setvar name="TPSetActive" value="0" />
				<setvar name="EvaSetActive" value="0" />
				<setvar name="EvaSetActiveRun" value="0" />
				<addtochat color="57">Treasure Hunter TP set enabled!</addtochat>
			</if>
		</cmd>
		<cmd input="/tp">
			<if advanced="$TPSetActive=0">
				<setvar name="THTPSetActive" value="0" />
				<setvar name="TPSetActive" value="1" />
				<setvar name="EvaSetActiveRun" value="0" />
				<addtochat color="57">TP set enable!</addtochat>
			</if>
		</cmd>
		<cmd input="/eva">
			<if advanced="$TPSetActive=0">
				<setvar name="THTPSetActive" value="0" />
				<setvar name="TPSetActive" value="0" />
				<setvar name="EvaSetActive" value="1" />
				<setvar name="EvaSetActiveRun" value="0" />
				<addtochat color="57">Evasion set Enable!</addtochat>
			</if>
		</cmd>
		<cmd input="/solo">
			<if advanced="$TPSetActive=0">
				<setvar name="THTPSetActive" value="0" />
				<setvar name="TPSetActive" value="0" />
				<setvar name="EvaSetActive" value="0" />
				<setvar name="EvaSetActiveRun" value="1" />
				<addtochat color="57">Evasion set Enable!</addtochat>
			</if>
		</cmd>
	</inputcommands>
	
	<premagic>
		<if ad_skill="Ninjutsu">
			<equip><rear>Loquac. Earring</rear></equip>
		</if>
	</premagic>
	
	<idlegear>
		<if buffactive="Sneak Attack">
			<if advanced="$THTPSetActive=1">
				<equip set="sneakth"/>
			</if>
			<else>
				<equip set="sneak"/>
			</else>
		</if>
		<elseif buffactive="Trick Attack">
			<if advanced="$THTPSetActive=1">
				<equip set="trickth"/>
			</if>
			<else>
				<equip set="trick"/>
			</else>
		</elseif>
		<elseif p_status="engaged">
			<if advanced="$THTPSetActive=1">
				<equip set="hasteth"/>
			</if>
			<elseif advanced="$EvaSetActive=1">
				<equip set="evasion"/>
			</elseif>
			<else>
				<equip set="haste"/>
			</else>
		</elseif>
		<elseif advanced="$EvaSetActiveRun=1">
			<equip set="kite"/>
		</elseif>
		<else>
			<equip set="Stand" />
		</else>
		<if advanced="$init=0">
			<setvar name="init" value="1" />
			<command>/exec macrobook3.txt</command>
		</if>
	</idlegear>	
	<midmagic>
		<if ad_name="Utsusemi*">
			<equip set="Evasion" />
			<if ad_name="*Ni">
				<equip set="Haste" />
			</if>
		</if>
	</midmagic>
	<weaponskill>
		<if ad_name="Exenterator">
			<equip set="trick"/>
		</if>
		<if ad_name="Mercy Stroke">
			<if advanced="$THTPSetActive=1">
				<equip set="sneakth"/>
			</if>
			<else>
				<equip set="sneak"/>
			</else>
		</if>
	</weaponskill>
</ashitacast>
